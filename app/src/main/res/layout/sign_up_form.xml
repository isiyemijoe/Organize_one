<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/signup_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="Write Topic"
                android:inputType="textPersonName"
                android:textColor="@color/todo_name"
                app:layout_constraintBottom_toTopOf="@+id/signup_month"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_taskname"
                app:layout_constraintVertical_bias="0.614" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Description"
                android:textColor="@color/todo_name"
                app:layout_constraintBottom_toTopOf="@+id/signup_description"
                app:layout_constraintEnd_toEndOf="@+id/signup_description"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/signup_description"
                app:layout_constraintTop_toBottomOf="@+id/signup_taskname"
                app:layout_constraintVertical_bias="0.883" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="Alarm Uptime"
                android:textColor="@color/todo_name"
                app:layout_constraintBottom_toTopOf="@+id/signup_uptime"
                app:layout_constraintEnd_toStartOf="@+id/signup_alarm"
                app:layout_constraintHorizontal_bias="0.126"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_month" />

            <View
                android:id="@+id/view5"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/dialog_line"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.59" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Create new Tasks"
                android:textColor="@color/todo_name"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/signup_taskname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="31dp"
                android:ems="10"
                android:hint="@string/write_topic"
                android:inputType="textPersonName"
                android:textColor="@color/todo_name"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <EditText
                android:id="@+id/signup_uptime"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:autofillHints=""
                android:ems="10"
                android:hint="10 "
                android:inputType="textPersonName"
                android:textColor="@color/todo_name"
                app:layout_constraintEnd_toStartOf="@+id/signup_alarm"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/raleway_semibold"
                android:text="@string/topic"
                android:textColor="@color/todo_name"
                app:layout_constraintBottom_toTopOf="@+id/signup_taskname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.285" />

            <EditText
                android:id="@+id/signup_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="@string/_2020"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/signup_month"
                app:layout_constraintEnd_toStartOf="@+id/signup_date_picker"
                app:layout_constraintStart_toEndOf="@+id/signup_month"
                app:layout_constraintTop_toTopOf="@+id/signup_month" />

            <EditText
                android:id="@+id/signup_day"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:fontFamily="@font/raleway"
                android:hint="04"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toStartOf="@+id/signup_month"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_description" />

            <AutoCompleteTextView
                android:id="@+id/signup_month"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/raleway_medium"
                android:hint="Feb"
                android:textColor="@color/todo_name"
                app:layout_constraintBottom_toBottomOf="@+id/signup_day"
                app:layout_constraintStart_toEndOf="@+id/signup_day"
                app:layout_constraintTop_toTopOf="@+id/signup_day"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/signup_date_picker"
                android:layout_width="48dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/white_round"
                android:elevation="8dp"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/signup_year"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/signup_year"
                app:layout_constraintTop_toTopOf="@+id/signup_year"
                app:srcCompat="@drawable/ic_today_black_24dp" />

            <ImageView
                android:id="@+id/signup_alarm"
                android:layout_width="48dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/white_round"
                android:elevation="8dp"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/signup_add_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/signup_uptime"
                app:layout_constraintTop_toBottomOf="@+id/signup_day"
                app:layout_constraintVertical_bias="0.009"
                app:srcCompat="@drawable/ic_access_alarms_black_24dp" />

            <Button
                android:id="@+id/signup_add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/signup_bg"
                android:fontFamily="@font/raleway_bold"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_spinner"
                app:layout_constraintVertical_bias="1.0" />

            <Spinner
                android:id="@+id/signup_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="8dp"
                android:stateListAnimator="@android:anim/fade_in"
                app:layout_constraintBottom_toTopOf="@+id/signup_add_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signup_uptime" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>